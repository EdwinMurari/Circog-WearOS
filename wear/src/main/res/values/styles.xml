<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="activity_header_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/header_start_padding</item>
        <item name="android:paddingEnd">@dimen/header_end_padding</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="clickable_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/button_ripple</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_right_white_18dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingStart">@dimen/list_start_padding</item>
        <item name="android:paddingEnd">@dimen/list_end_padding</item>
    </style>

    <style name="textview_list_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingStart">@dimen/list_start_padding</item>
        <item name="android:paddingEnd">@dimen/list_end_padding</item>
    </style>

    <style name="textview_warning_list_item" parent="textview_list_item">
        <item name="android:paddingTop">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_list_item" parent="textview_list_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/colored_button_ripple</item>
        <item name="android:backgroundTint">@color/dark_grey</item>
    </style>
</resources>